<script src="./views/sorttable.js"></script>
<script src="./views/sparkline.js"></script>
<style>
  #games { font-family: Arial; border-collapse: collapse; font-size: 8pt; }
  #games td, #games th { border: 1px solid #ddd; padding: 8px; }
  #games tr:nth-child(even) { background-color: #f2f2f2; }
  #games tr:hover * { background-color: rgb(194, 149, 141) !important; }
  #games th { background-color: #4CAF50; color: white; }
  #games td { white-space: nowrap; }
  .number { text-align: right; }
  .low { background-color: silver; }
  .high { background-color: rgb(183, 214 ,170); }
  .player-rank-1 { background-color: #c68eff; } /* purple */
  .player-rank-2 { background-color: #8e8eff; } /* blue */
  .player-rank-3 { background-color: #8eff8e; } /* green */
  .player-rank-4 { background-color: #ffff8e; } /* yellow */
  .player-rank-5 { background-color: #ffc68e; } /* orange */
  .player-rank-6 { background-color: #ff8e8e; } /* red */
  .right-border { border-right: 1px solid #999 !important; }
  .trend-down { stroke: blue; fill: rgba(0, 0, 255, .3); }
  .trend-even { stroke: orange; fill: rgba(255, 198, 142, .3); }
  .trend-up { stroke: red; fill: rgba(255, 0, 0, .3); }
  th { position: sticky; top: 0; }
</style>

<table id="games" class="sortable">
  <tr>
    <th>Play Stats</th>
    <th>Play Stats</th>
    <th>Game</th>
    <th>Year</th>
    <th>Play Rank</th>
    <th>Rank</th>
    <th>Rating</th>
    <th>Voters</th>
    <% @months.each do |month| %>
      <th class="rank"><div><span><%= month.strftime("%Y") %></span></div></th>
    <% end %>
  </tr>
  <% @games.each.with_index do |game, i| %>
    <%
      low_rank = game[:rank].to_i > 300
      low_players = game[:player_count].to_i < 300
      low_rating = game[:rating].to_f < 7.5
      recent_year = game[:year].to_i > Bgg::MAX_GAME_YEAR
      player_count_rank = @bgg.player_rank(game[:play_rank])
      low_voters = game[:voters].to_i < 3000
      low_game = low_players
      voter_count_rank = @bgg.voter_rank(game[:voters])
    %>
    <tr>
      <td><svg class="sparkline zparkline-<%= i %> trend-<%= game[:trend] %>" width="100" height="30" stroke-width="3"></svg></td>
      <td><svg class="sparkline sparkline-<%= i %> trend-<%= game[:trend] %>" width="100" height="30" stroke-width="3"></svg></td>
      <td class="<%= 'low' if game[:trend] == :down %>">
        <a href="https://boardgamegeek.com<%= game[:href] %>"><%= game[:name] %></a>
      </td>
      <td class="number <%= 'low' if recent_year %>"><%= game[:year] %></td>
      <td class="number player-rank-<%= player_count_rank %>"><%= game[:play_rank] %></td>
      <td class="number <%= 'low' if low_rank %>"><%= game[:rank] %></td>
      <td class="number <%= 'low' if low_rating %>"><%= game[:rating] %></td>
      <td class="number <%= 'low' if low_voters %>  player-rank-<%= voter_count_rank %> right-border"><%= game[:voters] %></td>
      <% @months.each do |month| %>
        <%
          player_count = game[:play_ranks].to_h[month.to_s]
          player_count_rank = @bgg.player_rank(player_count)
        %>
        <td class="number player-rank-<%= player_count_rank if player_count %>"><%= player_count %></td>
      <% end %>
    </tr>
  <% end %>
</table>

<script>
   <% @games.each.with_index do |game, i| %>
     sparkline(
       document.querySelector(".zparkline-<%= i %>"),
       <%= @months.map { |month| game[:players].to_h[month.to_s].to_i }.to_s %>
     );
   <% end %>

  <% @games.each.with_index do |game, i| %>
    sparkline(
      document.querySelector(".sparkline-<%= i %>"),
      <%=
        @months.map do |month|
          play_rank = game[:play_ranks].to_h[month.to_s].to_i
          play_rank.zero? ? 0 : (1000 - play_rank)
        end.to_s
      %>
    );
  <% end %>
</script>

