<link href="https://cdn.jsdelivr.net/gh/tofsjonas/sortable@latest/sortable.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/gh/tofsjonas/sortable@latest/sortable.min.js"></script>

<style>
  #games { font-family: Arial; border-collapse: collapse; font-size: 8pt; margin-top: 20px; }
  #games td, #games th { border: 1px solid #ddd; padding: 8px; }
  #games tr:nth-child(even) { background-color: #f2f2f2; }
  #games tbody tr:hover * { background-color: rgb(194, 149, 141) !important; }
  #games th { background-color: #4CAF50; color: white; }
  #games td { white-space: nowrap; }
  .number { text-align: right; }
  .low { background-color: silver; }
  th { position: sticky; top: 20; }
</style>

<table id="games" class="sortable">
  <thead>
    <tr>
      <th>Year</th>
      <th>Play Rank</th>
      <th>Game</th>
      <th>Votes</th>
      <th>Votes Rank</th>
      <th>Rank</th>
      <th>Votes Per Year</th>
      <th>Votes Per Year Rank</th>
      <th>Corridor Rank</th>
      <th>Couples Rank</th>
      <th>Solo Rank</th>
      <th>Rating</th>
      <th>Weight</th>
      <th>Player Count</th>
      <th>Mechanics</th>
      <th>Subdomain</th>
    </tr>
  </thead>
  <tbody>
    <% @games.each.with_index do |game, i| %>
      <%
        low_game = !game.rank.between?(1, 1000) || !game.play_rank.between?(1, 1000) || !game.vote_rank.between?(1, 1000)
        low_play_rank = !game.play_rank.between?(1, 400)
        low_rank = !game.rank.between?(1, 300)
        low_rating = game.rating < 7.5
        low_votes_per_year = !game.votes_per_year_rank.between?(1, 300)
        low_votes_per_year_rank = low_votes_per_year
        low_votes = game.vote_rank.zero?
        low_votes_rank = low_votes
        low_weight = game.weight.to_f >= 3
        low_year = game.year >= Bgg::MAX_GAME_YEAR
      %>
      <tr>
        <td class="number <%= 'low' if low_year %>"><%= game.year %></td>
        <td class="number <%= 'low' if low_play_rank %>"><%= game.play_rank %></td>
        <td class="<%= 'low' if low_game %>"><a href="https://boardgamegeek.com<%= game.href %>"><%= game.name %></a></td>
        <td class="number <%= 'low' if low_votes %>"><%= game.rating_count %></td>
        <td class="number <%= 'low' if low_votes_rank %>"><%= game.vote_rank %></td>
        <td class="number <%= 'low' if low_rank %>"><%= game.rank %></td>
        <td class="number <%= 'low' if low_votes_per_year %>"><%= game.votes_per_year %></td>
        <td class="number <%= 'low' if low_votes_per_year_rank %>"><%= game.votes_per_year_rank %></td>
        <td class="number"><%= game.corridor_rank %></td>
        <td class="number"><%= game.couples_rank %></td>
        <td class="number"><%= game.solo_rank %></td>
        <td class="number <%= 'low' if low_rating %>"><%= format("%0.2f", game.rating) %></td>
        <td class="number <%= 'low' if low_weight %>"><%= game.weight %></td>
        <td><%= game.player_count %></td>
        <td><%= game.mechanics.join(", ") %></td>
        <td><%= game.subdomain.join(", ") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
