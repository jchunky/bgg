<style>
  #games {
    font-family: Arial;
    border-collapse: collapse;
    width: 100%;
    table-layout: fixed;
    font-size: 8pt;
  }

  #games td, #games th {
    border: 1px solid #ddd;
    padding: 8px;
  }

  #games tr:nth-child(even) { background-color: #f2f2f2; }

  #games tr:hover { background-color: #ddd; }

  #games th {
    text-align: left;
    vertical-align: bottom;
    background-color: #4CAF50;
    color: white;
  }

  th.rank {
    height: 120px;
    white-space: nowrap;
  }

  th.rank > div {
    transform: rotate(270deg);
    width: 10px;
  }

  .game {
    white-space: nowrap;
    overflow: hidden;
  }

  .rank {
    width: 10px;
    text-align: right;
  }
</style>

<table id="games">
  <tr>
    <th class="game">Game</th>
    <% @months.each do |month| %>
      <th class="rank"><div><span><%= month.to_s %></span></div></th>
    <% end %>
  </tr>
  <% @games.each do |name, details| %>
    <tr>
      <td class="game"><a href="https://boardgamegeek.com<%= details.href %>"><%= name %></a></td>
      <% @months.each do |month| %>
        <td class="rank"><%= details.ranks[month.to_s] %></td>
      <% end %>
    </tr>
  <% end %>
</table>
